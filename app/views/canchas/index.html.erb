


<div class="row">
  <div class="col-sm-6">
    <h1>Canchas</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_cancha_path, class: 'btn btn-primary' do %>
    Agregar Cancha
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>


            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Capacidad</th>
            <th>Operativa</th>
            <th>Materia prima</th>

          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @canchas.each do |cancha| %>
        <%= content_tag :tr, id: dom_id(cancha), class: dom_class(cancha) do %>


                      <td><%= cancha.nombre %></td>
                      <td><%= cancha.descripcion %></td>
                      <td><%= cancha.capacidad %></td>
                      <td><%= cancha.operativa ? "Si" : "No" %></td>
                      <td><%= cancha.mmpp.nombre %></td>


            <td><%= link_to 'Detalles', cancha %></td>

        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
