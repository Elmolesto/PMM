


<div class="row">
  <div class="col-sm-6">
    <h1>Cuasis</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_cuasi_path, class: 'btn btn-primary' do %>
    Nuevo registro
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>


            <th>Sitio</th>
            <th>Fecha</th>
            <th>Reporta</th>
            <th>Potencial</th>
            <th>Accion</th>
            <th>Responsable</th>
            <th>Estado</th>

          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @cuasis.each do |cuasi| %>
        <%= content_tag :tr, id: dom_id(cuasi), class: dom_class(cuasi) do %>


                      <td><%= cuasi.sitio %></td>
                      <td><%= cuasi.fecha %></td>
                      <td><%= cuasi.reporta %></td>
                      <td><%= cuasi.potencial %></td>
                      <td><%= cuasi.accion %></td>
                      <td><%= cuasi.responsable %></td>
                      <td><%= cuasi.estado %></td>


            <td><%= link_to 'Show', cuasi %></td>

        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
